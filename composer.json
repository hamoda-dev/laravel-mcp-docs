{
    "name": "hamoda-dev/laravel-mcp-docs",
    "description": "A Laravel package that exposes API documentation via MCP (Model Context Protocol) for LLM clients",
    "type": "library",
    "license": "MIT",
    "version": "dev-main",
    "keywords": [
        "laravel",
        "mcp",
        "api-documentation",
        "openapi",
        "json-rpc"
    ],
    "authors": [
        {
            "name": "Hamoda",
            "email": "hamoda@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "symfony/yaml": "^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "McpDocs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "McpDocs\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "format": "pint",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "McpDocs\\Providers\\McpServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
